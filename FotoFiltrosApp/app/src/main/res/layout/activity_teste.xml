<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fotoapp.CallCamera"
    android:backgroundTint="@color/accent_material_dark">

    <Button
        android:id="@+id/button_callcamera"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="@string/get_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descript"
        android:src="@drawable/corgi"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/button_callcamera"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:clickable="true"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/photo_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:text="Salvar!"
        android:id="@+id/button"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FotoFiltrosApp"
        android:id="@+id/textView"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histograma"
        android:id="@+id/button2"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo"
        android:onClick="mostrarGrupo"
        android:id="@+id/button3"
        android:layout_above="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

</RelativeLayout>